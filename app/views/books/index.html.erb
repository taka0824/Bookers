<h1>Books</h1>

<table>
  <tr>
    <th>Title</th>
    <th>Body</th>
    <th colspan="3"></th>
  </tr>
  <% @books.each do |book| %>
  <tr class="record">
    <td><%= book.title %></td>
    <td><%= book.body %></td>
    <td class="index-link"><%= link_to "Show", book_path(book) %></td>
    <td class="index-link"><%= link_to "Edit", edit_book_path(book) %></td>
    <td class="index-link"><%= link_to "Destroy", book_path(book), method: :delete,"data-confirm" => "Are you sure?" %></td>
  </tr>
  <% end %>
</table>

<h2>New book</h2>

<%= form_with model:@book,local:true do |f| %>

<%= render "layouts/error_messages", model: f.object %>

<h4>タイトル</h4>
<%= f.text_field :title %>

<h4>Body</h4>
<%= f.text_area :body %>

<%= f.submit "Create Book" %>
<% end %>